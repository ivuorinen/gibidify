root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2
indent_style = tab
tab_width = 2

[*.yml]
indent_style = space

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,json}]
indent_style = space
max_line_length = 250

[LICENSE]
max_line_length = 80
indent_size = 0
indent_style = space
trim_trailing_whitespace = true

[*.sh]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
max_line_length = 80
indent_size = 2
trim_trailing_whitespace = true
