root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2
indent_style = tab
tab_width = 2

[*.go]
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,json,toml}]
indent_style = space
max_line_length = 250

[*.{yaml.example,yml.example}]
indent_style = space

[.yamllint]
indent_style = space

[LICENSE]
max_line_length = 80
indent_size = 0
indent_style = space

[Makefile]
max_line_length = 80
