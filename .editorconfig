root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2
indent_style = tab
tab_width = 2
charset = utf-8

[*.go]
max_line_length = 120

[*.{yml,yaml,json,example}]
indent_style = space
max_line_length = 250

[LICENSE]
max_line_length = 80
indent_size = 0
indent_style = space

[*.{sh,md,txt}]
indent_style = space

[.yamllint]
indent_style = space

[Makefile]
max_line_length = 999
